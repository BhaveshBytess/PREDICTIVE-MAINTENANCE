{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://your-render-url.onrender.com/api/:path*"
    },
    {
      "source": "/system/:path*",
      "destination": "https://your-render-url.onrender.com/system/:path*"
    },
    {
      "source": "/health",
      "destination": "https://your-render-url.onrender.com/health"
    },
    {
      "source": "/docs",
      "destination": "https://your-render-url.onrender.com/docs"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "X-XSS-Protection", "value": "1; mode=block" }
      ]
    }
  ]
}
